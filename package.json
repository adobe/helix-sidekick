{
  "name": "@adobe/helix-sidekick",
  "version": "3.2.1",
  "description": "Helix Sidekick",
  "main": "src/index.js",
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --branches 100 --statements 100 --lines 100 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/**/*.js'  > docs/API.md",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-sidekick"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-sidekick/issues"
  },
  "homepage": "https://github.com/adobe/helix-sidekick#readme",
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.5",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "ajv": "8.6.0",
    "codecov": "3.8.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.30.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.23.4",
    "jsdoc-to-markdown": "7.0.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "11.0.0",
    "mocha": "9.0.2",
    "nyc": "15.1.0",
    "puppeteer": "10.1.0",
    "semantic-release": "17.4.4"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
